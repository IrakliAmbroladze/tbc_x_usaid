{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./src/",
    "paths": {
      "@/styles/*": ["styles/*"],
      "@/components/*": ["components/*"],
      "@/utils/*": ["utils/*"],
      "@/lib/*": ["lib/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "./dist/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/[locale]/(authUserView)/error.jsx",
    "src/app/components/AuthUserView.tsx",
    "src/app/components/UnAuthUserAlert.tsx",
    "src/app/[locale]/(authUserView)/loading.tsx",
    "src/app/api/products/route.js",
    "src/app/components/ThemeToggle.js",
    "src/app/components/language.js",
    "src/app/api/posts/[id]/route.js",
    "src/app/actions/actions.tsx",
    "src/app/[locale]/pricing/components/basic-plan.jsx",
    "src/app/[locale]/pricing/page.tsx"
  ],
  "exclude": ["node_modules"]
}
